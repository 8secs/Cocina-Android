            android:theme="@style/ActionPreference" >
            <intent-filter>
                <action android:name="com.visitaelaljarafe.homecooking.ui.activity.memberPreferenceActivities.AddressMember" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.ChefActivity"
            android:label="@string/title_activity_chefs"
