                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activity.MenuPrincipalActivity" />
        </activity>
        <activity
            android:name=".ui.activity.ProductDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
