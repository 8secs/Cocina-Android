<?xml version="1.0" encoding="utf-8"?>
<com.homecooking.ykecomo.ui.adapter.ProductItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="240dp"
    android:padding="8dp"
    android:background="@drawable/background_game">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_thumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/PRODUCT_IMAGE" />
        
        <TextView 
            android:id="@+id/price_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@color/accent_material_light"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary_text_default_material_dark"
            tools:text="20â‚¬"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@id/product_thumb">

            <TextView
                android:id="@+id/text_shop_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="200"
                android:textColor="@color/material_drawer_primary_dark"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

            <TextView
                android:id="@+id/chef_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_below="@id/text_shop_title"
                tools:text="nombre"
                android:textColor="@color/primary_text"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

            <TextView
                android:id="@+id/text_portions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:layout_alignParentRight="true"
                tools:text="raciones"/>
            <TextView
                android:id="@+id/text_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/text_portions"
                android:textColor="@color/primary_text"
                tools:text="Sevilla"/>

        </RelativeLayout>
    </RelativeLayout>
</com.homecooking.ykecomo.ui.adapter.ProductItemView>